# Environment
ENVIRONMENT=test
DEBUG=False

# Database
POSTGRES_DB=escriptorium_test
POSTGRES_USER=escriptorium
POSTGRES_PASSWORD=escriptorium_test_pass
DATABASE_URL=postgresql://escriptorium:escriptorium_test_pass@db:5432/escriptorium_test

# Redis
REDIS_URL=redis://redis:6379/1

# Server
DOMAIN=test.localhost
ALLOWED_HOSTS=test.localhost,127.0.0.1,nginx,web

# Security (TEST - ×‘×™× ×•× ×™)
SECRET_KEY=test-secret-key-change-for-production-67890
CSRF_TRUSTED_ORIGINS=http://test.localhost:8081,http://localhost:8081

# Performance (TEST - ×‘×™× ×•× ×™)
UWSGI_PROCESSES=2
UWSGI_THREADS=4

# Logging
LOG_LEVEL=INFO

# Testing
DJANGO_SETTINGS_MODULE=escriptorium.settings
PYTEST_ARGS=--tb=short --maxfail=1

# CI/CD
CI=true
