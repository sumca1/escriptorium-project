# eScriptorium Environment Variables
# Auto-generated for integrated deployment

# Domain configuration
DOMAIN=localhost

# PostgreSQL Database
POSTGRES_DB=escriptorium
POSTGRES_USER=escriptorium
POSTGRES_PASSWORD=escriptorium
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Compatibility: SQL_HOST/SQL_PORT for entrypoint.sh
SQL_HOST=db
SQL_PORT=5432

# Django Secret Key (change in production!)
SECRET_KEY=django-insecure-dev-key-change-this-in-production

# Debug mode (False in production)
DEBUG=True

# Allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1,web,nginx

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Celery workers concurrency
CELERY_MAIN_CONC=10
CELERY_LIVE_CONC=10
CELERY_LOW_CONC=10

# Email configuration (for development)
EMAIL_HOST=mail
EMAIL_PORT=25
EMAIL_USE_TLS=False

# Elasticsearch
ELASTICSEARCH_URL=http://elasticsearch:9200

# Application settings
LANGUAGE_CODE=he
TIME_ZONE=Asia/Jerusalem
